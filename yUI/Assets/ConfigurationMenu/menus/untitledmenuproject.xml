				</sub>
			</y>
			<include src="top_bracket.xml"/>				<!-- BRACKET ABOVE THE TEXT -->
			<width>  <copy src="parent()" trait="width"/>  <sub src="me()" trait="x"/><sub> 9 </sub></width>
			<height> 60 </height>
			<locus> &true; </locus>

			<text name="STW_SelectionText">			<!-- Selection text: displays info about selection -->
