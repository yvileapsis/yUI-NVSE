			</text>

		</hotrect>

		<hotrect name="Categories"> <!-- ===== Categories =====  -->
			<locus> &true; </locus>
			<x> 0 </x>
			<y> 0 </y>
			<width><copy src="io()" trait="_separatorX"/></width>
			<height> 56 </height>
			<id> 15 </id>
			<target> &true; </target>
			<clicksound> UIMenuOK </clicksound>
			<mouseoversound> UIPipboyScroll</mouseoversound>
			<_highlight>
				<copy>1</copy>
				<onlyif>
					<copy src="me()" trait="mouseover"/>
