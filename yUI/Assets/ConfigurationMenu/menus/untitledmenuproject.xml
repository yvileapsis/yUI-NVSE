			<y>
				<copy src="parent()" trait="height"/><sub> 152 </sub>
				<sub>
					<copy src="child(STW_SelectionText)" trait="height"/><sub> 121 </sub>
					<onlyif>
						<copy src="child(STW_SelectionText)" trait="height"/><gt>140</gt>
