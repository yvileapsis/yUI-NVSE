				<y><copy src="parent()" trait="height"/> <sub src="me()" trait="height"/> <div> 2 </div></y>
				<height> 22 </height>
				<width> 22 </width>
				<zoom> &scale; </zoom>
				<alpha>190</alpha>
				<target> &true; </target>
				<clicksound> UIPipboyScroll </clicksound>
				<id>16</id>
			</image>

			<text name="SearchPlaceholder">
				<y> 7 </y>
				<x> 10 </x>
				<font> 42 </font>
				<alpha>75</alpha>
				<string>Search</string>
