					<copy src="me()" trait="_file_" /> 
				</filename>
				<height> <copy> 28 </copy>  </height>
				<width> <copy> 28 </copy> </width>
				<x><copy src="parent()" trait="width"/><sub src="me()" trait="width"/> <div> 2 </div></x>
