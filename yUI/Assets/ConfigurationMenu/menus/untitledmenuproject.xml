			</image>

			<text name="CategoryTitle">
				<y><copy src="parent()" trait="height"/><sub src="me()" trait="height"/><add>17</add><div>2</div></y>
				<x> 40 </x>
				<zoom> 100 </zoom>
				<string>Category</string>
				<visible> 1 </visible>
