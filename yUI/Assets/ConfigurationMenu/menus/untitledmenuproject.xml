					<clips> &true; </clips>
					<string></string>
					<id> 5 </id>
					<y> 7 </y>
					<x>
						<copy> 10 </copy>
						<sub>
							<copy src="me()" trait="width"/><sub src="parent()" trait="width"/><add>14</add>
							<onlyif>
								<copy src="me()" trait="width"/><gt><copy src="parent()" trait="width"/><sub>12</sub></gt>
								<and><copy src="io()" trait="_IsSearchActive" /> <eq>1</eq></and>
