			<hotrect name="InputClipper">
				<width><copy src="sibling(SearchIcon)" trait="x"/><sub> 4 </sub></width>
				<target> &true; </target>
				<clicksound> UIPipboyScroll </clicksound>
				<id>6</id>
				<height> <copy src="parent()" trait="height"/></height>
